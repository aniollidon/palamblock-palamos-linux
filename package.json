{
  "name": "palam-dash",
  "version": "2.0.0",
  "description": "Aplicaci√≥ Electron per a PalamOS Dashboard",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop PalamOS-Dashboard",
    "pm2:restart": "pm2 restart PalamOS-Dashboard",
    "pm2:logs": "pm2 logs PalamOS-Dashboard",
    "pm2:delete": "pm2 delete PalamOS-Dashboard",
    "install:deps": "./install-dependencies-ubuntu.sh",
    "install:service": "sudo ./install-service-linux.sh",
    "install:startup": "./install-startup-linux.sh"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "ip": "^2.0.1",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.palamos.dash",
    "productName": "PalamOS Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "System"
    }
  }
}
